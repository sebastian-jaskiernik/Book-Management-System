@model WebApplication3.Models.Book

<tr>
    <td>@Model.Title</td>
    <td>@(Model.Author?.Name ?? "No Author")</td>
    <td>@(Model.Publisher?.Name ?? "No Publisher")</td>
    <td>
        <a asp-action="Update" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">Delete</a>
    </td>
</tr>